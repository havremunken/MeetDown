@model IEnumerable<MeetDown.Core.Entities.Group>
@{
    ViewBag.Title = "Home Page";
}
@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title.</h1>
                <h2>@ViewBag.Message</h2>
            </hgroup>
        </div>
    </section>
}
<h3>Medlemmer:</h3>
<ul>
    @foreach (var meetdownGroup in Model)
    {
        <li>@Html.ActionLink(meetdownGroup.Name, "Info", "Group", new {slug = meetdownGroup.Slug}, null) (@meetdownGroup.Members.Count() members)</li>
    }
</ul>
